{
  "options": {
    "forceExit": true,
    "match": ".",
    "matchall": false,
    "extensions": "js",
    "specFolders": [
      "test"
    ],
    "specNameMatcher": "-spec",
    "junitreport": {
      "report": false,
      "savePath": "build/reports/",
      "useDotNotation": true,
      "consolidate": true
    }
  },
  "unit": [
    "test/unit/"
  ],
  "integration": [
    "test/integration/"
  ],
  "coverage": {
    "options": {
      "failTask": true,
      "branches": 80,
      "functions": 80,
      "statements": 80,
      "lines": 80
    }
  }
}