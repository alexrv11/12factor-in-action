{
  "build-client": {
    "files": [{
      "expand": true,
      "dot": false,
      "cwd": "src/client/",
      "dest": "build/client/",
      "src": ["app/**", "components/**", "assets/**", "index.html", "index.js","!assets/**/*.less"],
      "filter": "isFile"
    }]
  },
  "build-rest-api": {
    "files": [{
      "expand": true,
      "dot": false,
      "cwd": "src/service/",
      "dest": "build/service/",
      "src": ["models/**", "resources/**", "services/**", "index.js"],
      "filter": "isFile"
    }]
  },
  "config-files":{
    "files": [{
      "expand": true,
      "dot": false,
      "cwd": "./",
      "dest": "build/",
      "src": ["bower.json", "package.json"],
      "filter": "isFile"
    }]
  },
  "executable-file": {
    "files": [{
      "expand": true,
      "dot": false,
      "cwd": "src/",
      "dest": "build/",
      "src": ["index.js"],
      "filter": "isFile"
    }]
  }
}